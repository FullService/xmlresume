  <refsect1><title>Examples</title>

    <informalexample><programlisting><![CDATA[
<period>
  <from><date>
    <dayOfMonth>10</dayOfMonth>
    <month>February</month>
    <year>1246</year>
  </date></from>
  <to><date>
    <dayOfMonth>19</dayOfMonth>
    <month>November</month>
    <year>1351</year>
  </date></to>
</period>
    ]]></programlisting></informalexample>

    <informalexample><programlisting><![CDATA[
<period>
  <from><date>
    <month>May</month>
    <year>1985</year>
  </date></from>
  <to>
    <present/>
  </to>
</period>
    ]]></programlisting></informalexample>

