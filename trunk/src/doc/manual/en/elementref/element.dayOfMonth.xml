<refentry id="element.dayOfMonth">
  <refnamediv>
    <refname>dayOfMonth</refname>
    <refpurpose>An ordinal day of the month</refpurpose>
  </refnamediv>

  <refsynopsisdiv><title>Synopsis</title>
    <refsect2><title>Content Model</title>
      <synopsis><?resumevar CONTENT_MODEL?></synopsis>
    </refsect2>
    <refsect2><title>Attributes</title>
      <?resumevar ATTRIBUTES_TABLE?>
    </refsect2>
  </refsynopsisdiv>

  <refsect1><title>Description</title>
    <para>
      Represents a specific day in a month. Its value is numeric; the first
      day of the month is written <literal>1</literal>, the fifteenth
      <literal>15</literal>, etc.
    </para>

